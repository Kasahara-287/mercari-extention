{
    "manifest_version": 2,
    "name": "Mercari Extension",
    "version": "1.0",
    "description": "A Chrome extension for Mercari",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "permissions": ["storage", "tabs", "https://www.mercari.com/"],
    "content_scripts": [
      {
        "matches": ["https://www.mercari.com/*"],
        "js": ["content.js"]
      }
    ]
  }